<!DOCTYPE html>
<html>
  <head>

    <title>Scrolly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
  <%= audio_tag "The Pink Panther Theme Song.mp3", :id => "pink" , loop => true; %>

        <ul class="things">
          <% if user_signed_in? %>
            <li>
              <%= link_to "Log out", destroy_user_session_path, id: "log_out", class: "button", method: :delete %>
            </li>
            <li>
              <%= link_to "Create", new_scrollz_path, id: "create", class: "submit" %>
            </li>

        </ul>
<% end %>

    <%= yield %>
  </body>
</html>

<script>
  window.onload = function backgroundM() {
    document.getElementById("pink").play();
    initialize();
  }
</script>
